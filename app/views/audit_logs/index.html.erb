<!--Audit Logs Page-->
<div class="container">

  <h1>Audit Logs</h1>

    <!--Search Bar Start-->
    <form class="d-flex" role="search" style="width: 25%">
      <input class="form-control me-2" type="search" placeholder="Search Events" aria-label="Search">
      <button class="btn btn-light text-right float-end" type="submit">Search</button>
    </form><br>
    <!-- Search Bar End -->

  <!-- [Insert Comment] -->
  <p id="notice"><%= notice %></p>
  
  <!--Table Start-->
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th style="width: 60%">Event</th>
        <th>User</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @audit_logs.each do |audit_log| %>
        <tr>
          <td><%= audit_log.event %></td>
          <td><%= audit_log.user %></td>
          <td><%= audit_log.date %></td>
          <td><%= link_to 'Show', audit_log %></td>
          <td><%= link_to 'Edit', edit_audit_log_path(audit_log) %></td>
          <td><%= link_to 'Destroy', audit_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br>
  <!--Table End-->

  <%= link_to 'New Audit Log', new_audit_log_path %>

</div>